{
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true
  },
  "buildOnSave": false,
  "compileOnSave": false,
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "target": "es6"
  },
  "exclude": [
    "node_modules"
  ],
  "atom": { "rewriteTsconfig": false }
}
